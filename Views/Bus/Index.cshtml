@model IEnumerable<Busticket.Models.Bus>

@{
    ViewBag.Title = "Index";
}

<h2>Index of Buses</h2>

<p>
    @Html.ActionLink("Create New Bus", "Create", "Bus")
</p>
<br>
<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.BusNo)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.vendor.name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.seats)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.driver)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.BusNo)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.vendor.name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.seats)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.driver)
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.BusNo }) |
                @Html.ActionLink("Details", "Details", new { id = item.BusNo }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.BusNo })
            </td>
        </tr>
    }

</table>

<br />

