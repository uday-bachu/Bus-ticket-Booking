
@{
    ViewBag.Title = "bus selection";
    Layout = "~/Views/Shared/PassengerView.cshtml";
}



<h2>Bus Selection</h2>

@using (Html.BeginForm("SelectBus", "Passenger", FormMethod.Post))
{
    <div class="form-group">
        @Html.Label("Origin")
        @Html.TextBox("Origin", null, new { @class = "form-control", placeholder = "Enter origin" })
    </div>

    <div class="form-group">
        @Html.Label("Destination")
        @Html.TextBox("Destination", null, new { @class = "form-control", placeholder = "Enter destination" })
    </div>

    <div class="form-group">
        @Html.Label("Select Date")
        <input type="date" id="selectedDate" name="selectedDate" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Submit</button>
}

@if (!string.IsNullOrEmpty(ViewBag.ErrorMessage))
{
    <div class="alert alert-danger" role="alert">
        @ViewBag.ErrorMessage
    </div>
}
