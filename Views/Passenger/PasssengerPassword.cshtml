@{
    ViewBag.Title = "Passenger Password";
    Layout = "~/Views/Shared/PassengerView.cshtml";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-6">
            <h2 class="text-center">Change/Create Password</h2>

            @using (Html.BeginForm())
            {
                @Html.AntiForgeryToken()

                <div class="form-horizontal">
                    <hr />
                    @Html.ValidationSummary(true, "", new { @class = "text-danger" })

                    <!-- Hidden field to hold passengerId -->

                    <div class="form-group">
                        @Html.Label("password1", "Password", htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.Password("password1", null, new { @class = "form-control" })
                            @Html.ValidationMessage("password1", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group">
                        @Html.Label("password2", "Re-enter Password", htmlAttributes: new { @class = "control-label" })
                        <div class="col-md-12">
                            @Html.Password("password2", null, new { @class = "form-control" })
                            @Html.ValidationMessage("password2", "", new { @class = "text-danger" })
                        </div>
                    </div>

                    <div class="form-group text-center">
                        <button type="submit" class="btn btn-primary">Change Password</button>
                    </div>
                </div>
            }
        </div>
    </div>
</div>

