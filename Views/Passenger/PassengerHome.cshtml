@{
    ViewBag.Title = "PassengerHome";
    Layout = "~/Views/Shared/PassengerView.cshtml";
}

@model Busticket.Models.Passenger

<div class="container">
    <div class="row">
        <div class="col-md-6">
            <div class="card">
                <div class="card-body">
                    <h4 class="card-title">Passenger Details</h4>
                    <dl class="dl-horizontal">
                        <dt>@Html.DisplayNameFor(model => model.PassengerId)</dt>
                        <dd>@Html.DisplayFor(model => model.PassengerId)</dd>

                        <dt>@Html.DisplayNameFor(model => model.Name)</dt>
                        <dd>@Html.DisplayFor(model => model.Name)</dd>

                        <dt>@Html.DisplayNameFor(model => model.Email)</dt>
                        <dd>@Html.DisplayFor(model => model.Email)</dd>

                        <dt>@Html.DisplayNameFor(model => model.Phone)</dt>
                        <dd>@Html.DisplayFor(model => model.Phone)</dd>
                    </dl>
                </div>
            </div>
        </div>
    </div>
</div>

<div class="mt-3">
    @Html.ActionLink("Want to delete account", "Delete", new { id = Model.PassengerId }, new { @class = "btn btn-danger", onclick = "return confirm('Are you sure you want to delete your account?')" })
</div>
