@model IEnumerable<Busticket.Models.Bus>

@{
    ViewBag.Title = "VendorBusses";
    Layout = "~/Views/Shared/VendorView.cshtml";
}


<div class="container">
    <div class="jumbotron">
        <h2 class="display-4 text-center">Manage Buses</h2>
        <p class="lead text-center">View and manage your fleet of buses.</p>
    </div>
    
    <div class="row">
        @foreach (var item in Model)
        {
            <div class="col-md-4">
                <div class="card mb-4">
                    <div class="card-body">
                        <h5 class="card-title">@Html.DisplayFor(modelItem => item.vendor.name)</h5>
                        <p class="card-text">Bus Number: @Html.DisplayFor(modelItem => item.BusNo)</p>
                        <p class="card-text">Seats: @Html.DisplayFor(modelItem => item.seats)</p>
                        <p class="card-text">Driver: @Html.DisplayFor(modelItem => item.driver)</p>
                        <p class="card-text">Origin: @Html.DisplayFor(modelItem => item.Origin)</p>
                        <p class="card-text">Destination: @Html.DisplayFor(modelItem => item.Destination)</p>

                        <div class="text-center">
                            @Html.ActionLink("Edit", "EditBus", new { id = item.BusNo }, new { @class = "btn btn-primary btn-sm mr-2" })
                            @Html.ActionLink("Details", "BusDetails", new { id = item.BusNo }, new { @class = "btn btn-info btn-sm mr-2" })
                            @Html.ActionLink("Delete", "DeleteBus", new { id = item.BusNo }, new { @class = "btn btn-danger btn-sm" })
                        </div>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

