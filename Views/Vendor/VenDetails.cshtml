@model Busticket.Models.Vendor

@{
    ViewBag.Title = "VendorIndex";
    Layout = "~/Views/Shared/VendorView.cshtml";
}

<h2 class="text-primary">Vendor Details</h2>

<div class="card shadow-sm mb-4">
    <div class="card-body">
        <h4 class="card-title">Vendor</h4>
        <hr />
        <dl class="dl-horizontal">
            <dt class="text-muted">
                @Html.DisplayNameFor(model => model.name)
            </dt>
            <dd>
                <span class="text-info">@Html.DisplayFor(model => model.name)</span>
            </dd>

            <dt class="text-muted">
                @Html.DisplayNameFor(model => model.Mail)
            </dt>
            <dd>
                <span class="text-info">@Html.DisplayFor(model => model.Mail)</span>
            </dd>

            <dt class="text-muted">
                @Html.DisplayNameFor(model => model.PhoneNo)
            </dt>
            <dd>
                <span class="text-info">@Html.DisplayFor(model => model.PhoneNo)</span>
            </dd>

            <dt class="text-muted">
                @Html.DisplayNameFor(model => model.age)
            </dt>
            <dd>
                <span class="text-info">@Html.DisplayFor(model => model.age)</span>
            </dd>
        </dl>
    </div>
</div>

