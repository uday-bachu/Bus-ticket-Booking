@model IEnumerable<Busticket.Models.Bus>

@{
    ViewBag.Title = "VendorBuses";
    Layout = "~/Views/Shared/VendorView.cshtml";
}

<h2 class="text-primary">Vendor Buses</h2>
@Html.ActionLink("Create Bus", "CreateBus", new { @class = "btn btn-primary btn-sm mr-2" })
<div class="table-responsive">
    <table class="table table-striped">
        <thead class="thead-dark">
            <tr>
                <th>Bus No</th>
                <th>Vendor</th>
                <th>Driver</th>
                <th>Origin</th>
                <th>Destination</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@Html.DisplayFor(modelItem => item.BusNo)</td>
                    <td>@Html.DisplayFor(modelItem => item.vendor.name)</td>
                    <td>@Html.DisplayFor(modelItem => item.driver)</td>
                    <td>@Html.DisplayFor(modelItem => item.Origin)</td>
                    <td>@Html.DisplayFor(modelItem => item.Destination)</td>
                    <td>
                        <a href="@Url.Action("EditBus", new { id = item.BusNo })" class="btn btn-primary"><i class="fas fa-edit"></i> Edit</a>
                        <a href="@Url.Action("BusDetails", new { id = item.BusNo })" class="btn btn-info"><i class="fas fa-info-circle"></i> Details</a>
                        <a href="@Url.Action("DeleteBus", new { id = item.BusNo })" class="btn btn-danger" onclick="return confirm('Are you sure you want to delete this bus?')"><i class="fas fa-trash-alt"></i> Delete</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</div>

