@model List<Busticket.Models.Booking>

@{
    ViewBag.Title = "Bus Passengers";
    Layout = "~/Views/Shared/VendorView.cshtml";
}

<div class="container">
    <div class="jumbotron">
        <h2 class="display-4 text-center">Bus Passengers</h2>
    </div>

    <div class="row justify-content-center">
        @foreach (var item in Model)
        {
            <div class="col-lg-4 mb-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Booking ID: <span class="text-primary">@item.BookingId</span></h5>
                        <p class="card-text"><strong>Passenger Name:</strong> <span class="text-info">@item.Passenger.Name</span></p>
                        <p class="card-text"><strong>Seat Number:</strong> <span class="text-success">@item.Seat.SeatName</span></p>
                        <p class="card-text"><strong>Booking Date:</strong> <span class="text-danger">@item.BookingDate.ToShortDateString()</span></p>
                        <p class="card-text"><strong>Payment Status:</strong> <span class="text-warning">@{if (item.IsPaid)
                            { <text>Paid</text>;
                        }
                        else
                        { <text>Unpaid</text>;
                    }}</span></p>
                        <p class="card-text"><strong>Bus Number:</strong> <span class="text-primary">@item.BusLog.BusNo</span></p>
                        <p class="card-text"><strong>Origin:</strong> <span class="text-success">@item.BusLog.Bus.Origin</span></p>
                        <p class="card-text"><strong>Destination:</strong> <span class="text-danger">@item.BusLog.Bus.Destination</span></p>

                        <p class="card-text"><strong>journey Date:</strong> <span class="text-warning">@item.BusLog.ArrivalTime.ToShortTimeString()</span></p>
                        <p class="card-text"><strong>journey Day:</strong> <span class="text-primary">@item.BusLog.JourneyDay</span></p>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

