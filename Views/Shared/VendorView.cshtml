<!DOCTYPE html>
<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title>Black Bus</title>
    <!-- Bootstrap CSS -->
    <link href="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/css/bootstrap.min.css" rel="stylesheet">
    <!-- Custom CSS for additional styling -->
    <style>
        body {
            background-color: #f8f9fa; /* Light gray background */
            font-family: 'Segoe UI', Tahoma, Geneva, Verdana, sans-serif;
        }

        .navbar {
            background-color: #212529; /* Dark background */
            border-bottom: 3px solid #ffc107; /* Yellow border for contrast */
        }

        .navbar-brand, .nav-link {
            font-weight: bold;
            color: #fff; /* White text */
        }

        .navbar-toggler-icon {
            background-color: #fff; /* White hamburger icon */
        }

        .footer {
            background-color: #212529; /* Dark background for footer */
            color: #fff; /* White text for footer */
            border-top: 1px solid #fff; /* White border on top */
        }

            .footer a {
                color: #ffc107; /* Yellow links */
                text-decoration: none;
            }

                .footer a:hover {
                    text-decoration: underline;
                }

        /* Pop-up effect for main content */
        .main-content {
            transition: transform 0.3s ease-in-out;
        }

            .main-content.active {
                transform: scale(1.03); /* Slightly scale up */
                box-shadow: 0 0 10px rgba(0,0,0,0.2); /* Add shadow for pop effect */
            }
    </style>
</head>
<body onload="disableBackButton()">
    @RenderSection("Scripts", required: false)
    <!-- Navigation Bar -->
    <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow-sm">
        <div class="container">
            <a class="navbar-brand" href="#">Black Bus</a>
            <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item active">
                        <a class="nav-link" href="@Url.Action("VendorIndex", "Vendor")">Home</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("VenDetails", "Vendor")">Details</a>
                    </li>
                    <li class="nav-item ">
                        <a class="nav-link" href="@Url.Action("AllPassengers", "Vendor")">Passengers</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="@Url.Action("Allbuses", "Vendor")">Buses</a>
                    </li>
                    <li class="nav-item">
                        <a class="nav-link" href="#" onclick="logout();">Log-Out</a>
                    </li>
                </ul>
            </div>
        </div>
    </nav>

    <!-- Main Content -->
    <div class="container mt-4 main-content">
        @RenderBody()
    </div>

    <!-- Footer -->
    <footer class="footer mt-4">
        <div class="container text-center py-3">
            <a href="@Url.Action("Policies", "Home")">Company Policy</a> |
            <a href="@Url.Action("Terms", "Home")">Terms and Conditions</a> |
            <a href="@Url.Action("AdminIndex", "Admin")">Company Values</a>
        </div>
    </footer>

    <!-- Bootstrap and jQuery Scripts -->
    <script src="https://code.jquery.com/jquery-3.3.1.slim.min.js"></script>
    <script src="https://cdnjs.cloudflare.com/ajax/libs/popper.js/1.14.7/umd/popper.min.js"></script>
    <script src="https://stackpath.bootstrapcdn.com/bootstrap/4.3.1/js/bootstrap.min.js"></script>

    <!-- Custom Script -->
    <script type="text/javascript">
    // Function to disable back button navigation
    function disableBackButton() {
        window.history.pushState(null, null, window.location.href);
        window.onpopstate = function () {
            window.history.pushState(null, null, window.location.href);
        };
    }

    // Ensure back button is disabled only when logout button is pressed
    function handleLogout() {
        // Perform logout logic here
        sessionStorage.clear();
        // Disable back button navigation
        disableBackButton();
        // Redirect to the logout page
        window.location.href = '@Url.Action("Index", "Home")'; // Redirect to HomeController's Index action
    }

    // Attach logout function to logout button click event
    document.getElementById('logoutButton').addEventListener('click', handleLogout);
    </script>

</body>
</html>
